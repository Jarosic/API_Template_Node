<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8">
	<title>Posts</title>
	<link rel="stylesheet" type="text/css" href="style.css">
	<style type="text/css">
        body {
            background-image: url('img/header2.jpg'); 
            background-position: 50% 50%;
            background-repeat: no-repeat;
            background-size: 180%;
        }
    </style>
</head>
<body>
 <div class="header" >
        <div class="header-col2">Posts</div>
        <div class="header-col1">
            <ul>
                <li><a href="http://localhost:3000/">HOME</a></li>
                <li><a href="http://localhost:3000/posts">POSTS</a></li>
                <li><a href="#">ABOUT US</a></li>
            </ul>
        </div>
    </div>

    <div class="content-container">
        <div class="content-col-1">
             <h1>Enter content</h1><br>

    <form action="/posts" method="post" id="form">
        <label><strong>Topic of the post:</strong></label><br>
        <input id="topic-input" type="text" name="title" size="40" /><br><br>
        <label><strong>Content:</strong></label><br>
        <textarea cols="40" rows="7" name="text"></textarea><br><br>
        <button>Add post</button>
    </form>

        </div>

        <div class="content-col-2 posts">
            <% for (var i = 0; i < posts.length; i++) {%>
            <p class="post-topic"><strong><%= posts[i].title %></strong></p><p><%= posts[i].text %></p><br>
            <button class="btn-edit" onclick="window.location.href='/posts/edit/<%= posts[i]._id %>'">Edit</button>
            <button class="btn-delete" onclick="window.location.href='/posts/delete/<%= posts[i]._id %>'">Delete</button>
            <hr>
            <%} %>
        </div>

        <div class="content-col-3"></div>
    </div>

    <div class="footer">
        <p>footer</p>
    </div>
	<script type="text/javascript" src="script.js"></script>
</body>
</html>